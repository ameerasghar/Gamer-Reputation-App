<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Skill score</th>
      <th>Teammate score</th>
      <th>Communication score</th>
      <th>Behavior score</th>
      <th>Friend score</th>
      <th>Play again score</th>
      <th>Comments</th>
      <th>Target</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.game %></td>
        <td><%= review.skill_score %></td>
        <td><%= review.teammate_score %></td>
        <td><%= review.communication_score %></td>
        <td><%= review.behavior_score %></td>
        <td><%= review.friend_score %></td>
        <td><%= review.play_again_score %></td>
        <td><%= review.comments %></td>
        <td><%= review.target_id %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
