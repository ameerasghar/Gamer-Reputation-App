<p id="notice"><%= notice %></p>

<h1>Gamers</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Xbox tag</th>
      <th>Psn tag</th>
      <th>Steam tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |gamer| %>
      <tr>
        <td><%= gamer.username %></td>
        <td><%= gamer.xbox_tag %></td>
        <td><%= gamer.psn_tag %></td>
        <td><%= gamer.steam_tag %></td>
        <td><%= link_to 'Show', gamer %></td>
        <td><%= link_to 'Edit', edit_gamer_path(gamer) %></td>
        <td><%= link_to 'Destroy', gamer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

